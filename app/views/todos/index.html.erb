<div>
  <div>
    <h1>
      Your todo list
    </h1>
  </div>
</div>


<div>
  <div>
    <h2>Add a new todo</h2>
    <form action="/insert_todo" method="post">
      <div>
        <label for="content_box">Describe the task:</label>
        <input type="text" id="content_box" name="query_content">
      </div>
    <button> Add to Next Up </button>
    </form>
  </div>
</div>

<div class="next_up">
  <h2>Next Up</h2>
  <ul>
    <li> ::marker 
      <div> "ADD TO THIS SECTION"
      </div>
      <small> "<%= time_ago_in_words(ADDDDDDDD.created_at) %> ago" 
        <a href="/delete_todo/:path_id">Delete</a>
      </small>
      <form action="/modify_todo/:path_id" method="post">
        <input type="hidden" name="query_status" value="in_progress">
        <button>Move to In Progress</button>
      </form>
    </li>
  </ul>
</div>

<div class="in_progress">
  <h2>In Progress<h2>
  <ul>
    <li> ::marker
      <div>"ADD TO THIS SECTION"
      </div>
      <small> "<%= time_ago_in_words(ADDDDDDDD.created_at) %> ago" 
        <a href="/delete_todo/:path_id">Delete</a>
      </small>
      <form action="/modify_todo/:path_id" method="post">
        <input type="hidden" name="query_status" value="done">
        <button>Move to Done</button>
      </form>
    </li>
  </ul>
</div>


<div class="done">
  <h2>Done</h2>
  <ul>
    <li> ::marker
      <div>"ADD TO THIS SECTION"
      </div>
      <small> "<%= time_ago_in_words(ADDDDDDDD.created_at) %> ago" 
        <a href="/delete_todo/:path_id">Delete</a>
      </small>
    </li>
  </ul>
</div>



